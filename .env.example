SERVER_PORT=8080
DB_PATH=db/app.db
ENVIRONMENT=development

# Turso Database Configuration (optional - if not set, uses local SQLite via DB_PATH)
# Get these values from: turso db show <db-name> --url and turso db tokens create <db-name>
TURSO_DATABASE_URL=libsql://your-database-your-org.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com:587 (use App Password, not regular password)
# For SendGrid: smtp.sendgrid.net:587 (use 'apikey' as username, API key as password)
# For Mailgun: smtp.mailgun.org:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@lawflowapp.com
EMAIL_FROM_NAME=LawFlow App

# Production Settings
# ALLOWED_ORIGINS: Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com
# APP_URL: Base URL used in email links
APP_URL=https://yourdomain.com
# SESSION_SECRET: 32-byte random secret for session signing (required in production)
SESSION_SECRET=your-32-byte-random-secret-here


# Superadmin User (platform-level admin, not associated with any firm)
SUPERADMIN_EMAIL=superadmin@example.com
SUPERADMIN_PASSWORD=your-secure-password
SUPERADMIN_NAME=Superadmin

# Cloudflare R2 Storage (optional - if not set, uses local filesystem)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
# 1. Go to R2 > Overview > Manage R2 API Tokens
# 2. Create API token with "Object Read & Write" permissions
# 3. Copy Account ID, Access Key ID, and Secret Access Key
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
# Optional: Custom domain for public access (e.g., https://cdn.yourdomain.com)
R2_PUBLIC_URL=

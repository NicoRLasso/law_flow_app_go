SERVER_PORT=8080
DB_PATH=db/app.db
ENVIRONMENT=development

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com:587 (use App Password, not regular password)
# For SendGrid: smtp.sendgrid.net:587 (use 'apikey' as username, API key as password)
# For Mailgun: smtp.mailgun.org:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@lawflowapp.com
EMAIL_FROM_NAME=LawFlow App

# Production Settings
# ALLOWED_ORIGINS: Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com
# APP_URL: Base URL used in email links
APP_URL=https://yourdomain.com
# SESSION_SECRET: 32-byte random secret for session signing (required in production)
SESSION_SECRET=your-32-byte-random-secret-here

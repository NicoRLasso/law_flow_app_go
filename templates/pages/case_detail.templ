package pages

import (
	"context"
	"law_flow_app_go/models"
	"law_flow_app_go/templates/components"
	"law_flow_app_go/templates/layouts"
	"law_flow_app_go/templates/partials"
	"law_flow_app_go/services/i18n"
	"strings"
)

templ CaseDetail(ctx context.Context, title string, csrfToken string, user *models.User, firm *models.Firm, caseRecord models.Case) {
	@layouts.Base(ctx, title, csrfToken) {
		<div class="min-h-screen bg-background">
			<!-- Navigation Bar -->
			@components.Navbar(ctx, user, firm, func() string { if caseRecord.IsHistorical { return "/historical-cases" } else { return "/cases" } }())
			
			<!-- Main Content -->
			<main class="container mx-auto px-4 md:px-6 py-6 md:py-8 flex justify-center">
				<div class="w-full max-w-7xl" x-data="{ activeTab: 'summary', sidebarOpen: false }">
					<!-- Header with Back Button -->
					<div class="flex items-center justify-between mb-6 md:mb-8">
						<div class="flex items-center gap-4">
							<a
								href={ templ.SafeURL(func() string { if caseRecord.IsHistorical { return "/historical-cases" } else { return "/cases" } }()) }
								class="p-2 hover:bg-white/5 rounded-lg transition-all duration-200"
								title={ i18n.T(ctx, "common.back") }
							>
								<svg class="w-6 h-6 text-muted-foreground hover:text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
								</svg>
							</a>
							<div>
								<h1 class="text-2xl md:text-3xl font-bold tracking-tight">{ i18n.T(ctx, "case.detail.title") }</h1>
								if caseRecord.FilingNumber != nil {
									<p class="text-sm text-accent font-medium mb-0.5">{ *caseRecord.FilingNumber }</p>
								}
								<p class="text-muted-foreground mt-1">{ i18n.T(ctx, "case.detail.case_number") }: { caseRecord.CaseNumber }</p>
							</div>
						</div>
						<div class="flex items-center gap-3">
							@CaseStatusBadge(ctx, caseRecord.Status)
							<button
								type="button"
								hx-get={ "/api/cases/" + caseRecord.ID + "/edit" }
								hx-target="#edit-case-modal-container"
								hx-swap="innerHTML"
								class="px-4 py-2 bg-accent text-accent-foreground rounded-lg font-semibold hover:bg-accent/90 transition-all duration-200 flex items-center gap-2"
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
								</svg>
								<span class="hidden sm:inline">{ i18n.T(ctx, "case.detail.edit_btn") }</span>
								<span class="sm:hidden">{ i18n.T(ctx, "case.detail.edit_short") }</span>
							</button>
						</div>
					</div>

					<!-- Layout with Sidebar -->
					<div class="settings-layout">
						<!-- Sidebar Navigation -->
						<aside class="settings-sidebar">
							<!-- Mobile Toggle Button -->
							<button
								@click="sidebarOpen = !sidebarOpen"
								:aria-expanded="sidebarOpen"
								class="settings-mobile-toggle md:hidden"
							>
								<span class="flex items-center gap-3">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
									</svg>
									<span x-text={ "activeTab === 'summary' ? '" + i18n.T(ctx, "case.detail.tab.summary") + "' : activeTab === 'parties' ? '" + i18n.T(ctx, "case.detail.tab.parties") + "' : activeTab === 'documents' ? '" + i18n.T(ctx, "case.detail.tab.documents") + "' : '" + i18n.T(ctx, "case.detail.tab.bitacora") + "'" }></span>
								</span>
								<svg 
									class="w-5 h-5 transition-transform duration-200"
									:class="{ 'rotate-180': sidebarOpen }"
									fill="none" 
									stroke="currentColor" 
									viewBox="0 0 24 24"
								>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>

							<!-- Navigation Menu -->
							<nav
								class="glass-panel rounded-2xl p-4 border border-white/10 settings-nav"
								:class="{ 'settings-nav-hidden': !sidebarOpen }"
								x-show="sidebarOpen || window.innerWidth >= 768"
								x-transition
							>
								<ul class="space-y-2">
									<li>
										<button
											@click="activeTab = 'summary'; sidebarOpen = false"
											:class="activeTab === 'summary' ? 'bg-accent text-white' : 'text-muted-foreground hover:text-foreground hover:bg-white/5'"
											class="w-full text-left px-4 py-3 rounded-xl font-medium transition-all duration-200 flex items-center gap-3"
										>
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
											</svg>
											<span>{ i18n.T(ctx, "case.detail.tab.summary") }</span>
										</button>
									</li>
									<li>
										<button
											@click="activeTab = 'parties'; sidebarOpen = false"
											:class="activeTab === 'parties' ? 'bg-accent text-white' : 'text-muted-foreground hover:text-foreground hover:bg-white/5'"
											class="w-full text-left px-4 py-3 rounded-xl font-medium transition-all duration-200 flex items-center gap-3"
										>
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
											</svg>
											<span>{ i18n.T(ctx, "case.detail.tab.parties") }</span>
										</button>
									</li>
									<li>
										<button
											@click="activeTab = 'documents'; sidebarOpen = false; setTimeout(() => { if (!document.getElementById('case-documents-list').dataset.loaded) htmx.trigger('#case-documents-list', 'loadDocuments') }, 50)"
											:class="activeTab === 'documents' ? 'bg-accent text-white' : 'text-muted-foreground hover:text-foreground hover:bg-white/5'"
											class="w-full text-left px-4 py-3 rounded-xl font-medium transition-all duration-200 flex items-center gap-3"
										>
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
											</svg>
											<span>{ i18n.T(ctx, "case.detail.tab.documents") }</span>
										</button>
									</li>
                                    <!-- Bitácora Tab -->
                                    if user.Role != "client" {
                                        <li>
                                            <button
                                                @click={ "activeTab = 'bitacora'; sidebarOpen = false; setTimeout(() => { if (!document.getElementById('case-logs-container')) htmx.ajax('GET', '/api/cases/" + caseRecord.ID + "/logs', {target: '#case-logs-wrapper', swap: 'innerHTML'}) }, 50)" }
                                                :class="activeTab === 'bitacora' ? 'bg-accent text-white' : 'text-muted-foreground hover:text-foreground hover:bg-white/5'"
                                                class="w-full text-left px-4 py-3 rounded-xl font-medium transition-all duration-200 flex items-center gap-3"
                                            >
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                                </svg>
                                                <span>{ i18n.T(ctx, "case.detail.tab.bitacora") }</span>
                                            </button>
                                        </li>
                                    }
								</ul>
							</nav>
						</aside>

						<!-- Main Content Area -->
						<div class="settings-content space-y-6">
							<!-- Summary Tab -->
							<div x-show="activeTab === 'summary'" x-transition class="space-y-6">
								@CaseResumenTab(ctx, caseRecord, user)
							</div>

							<!-- Parties Tab -->
							<div x-show="activeTab === 'parties'" x-transition class="space-y-6">
								@CasePartiesTab(ctx, caseRecord, user)
							</div>

							<!-- Documents Tab -->
							<div x-show="activeTab === 'documents'" x-transition class="space-y-6">
								@CaseDocumentsTab(ctx, caseRecord)
							</div>

                            <!-- Bitácora Tab Content -->
                            if user.Role != "client" {
                                <div x-show="activeTab === 'bitacora'" x-transition class="space-y-6">
                                    <h2 class="text-xl font-semibold">{ i18n.T(ctx, "bitacora.title") }</h2>
                                    <div id="case-logs-wrapper">
                                        <!-- Will be loaded via HTMX on tab click -->
                                        <div class="glass-panel p-12 rounded-xl border border-white/10 text-center">
                                            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent mx-auto mb-4"></div>
                                            <p class="text-muted-foreground">{ i18n.T(ctx, "bitacora.loading") }</p>
                                        </div>
                                    </div>
                                </div>
                            }
						</div>
					</div>

					<script>
						function openUploadModal() {
							const modal = document.getElementById('upload-document-modal');
							modal.classList.remove('hidden');
							modal.style.display = 'flex';
						}

						function closeUploadModal() {
							const modal = document.getElementById('upload-document-modal');
							modal.classList.add('hidden');
							modal.style.display = 'none';
							document.getElementById('upload-form').reset();
						}

						function openPDFViewerModal(docID, caseID, fileName) {
							const modal = document.getElementById('pdf-viewer-modal');
							const embedElement = document.getElementById('pdf-embed');
							const titleElement = document.getElementById('pdf-title');

							// Set document title
							titleElement.textContent = fileName;

							// Load PDF
							embedElement.src = `/api/cases/${caseID}/documents/${docID}/view`;

							// Show modal
							modal.classList.remove('hidden');
							modal.style.display = 'flex';
						}

						function closePDFViewerModal() {
							const modal = document.getElementById('pdf-viewer-modal');
							const embedElement = document.getElementById('pdf-embed');

							// Hide modal
							modal.classList.add('hidden');
							modal.style.display = 'none';

							// Clear PDF src to stop loading
							embedElement.src = '';
						}
					function closeTemplateSelectorModal() {
					const container = document.getElementById('template-modal-container');
					container.innerHTML = '';
				}
				</script>
				</div>
			</main>

			<!-- Upload Document Modal (outside main content) -->
			@UploadDocumentModal(ctx, caseRecord)

			<!-- PDF Viewer Modal -->
			@partials.PDFViewerModal(ctx, caseRecord)

			<!-- Edit Case Modal Container -->
			<div id="edit-case-modal-container"></div>
            
            <!-- Log Entry Modal Container -->
            <div id="log-entry-modal-container"></div>

			<!-- Template Selector Modal Container -->
			<div id="template-modal-container"></div>
			@components.ConfirmationModal(ctx)
		</div>
	}
}

// CaseResumenTab renders the summary tab content
templ CaseResumenTab(ctx context.Context, caseRecord models.Case, user *models.User) {
	<!-- Case Information Grid -->
	<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
						<!-- Left Column -->
						<div class="space-y-6">
							<!-- Case Information -->
							<div class="glass-panel p-6 rounded-xl border border-white/10">
								<h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
									<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
									</svg>
									{ i18n.T(ctx, "case.detail.info_title") }
								</h2>
								<div class="space-y-4">
									if caseRecord.FilingNumber != nil {
										<div>
											<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.radicado") }</label>
											<p class="text-foreground mt-1 text-lg font-medium">{ *caseRecord.FilingNumber }</p>
										</div>
									}
									<div>
										<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.case_number") }</label>
										<p class="text-foreground mt-1">{ caseRecord.CaseNumber }</p>
									</div>
									<div>
										<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.type") }</label>
										<p class="text-foreground mt-1">{ caseRecord.CaseType }</p>
									</div>
									if caseRecord.Title != nil {
										<div>
											<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.table.title") }</label>
											<p class="text-foreground mt-1">{ *caseRecord.Title }</p>
										</div>
									}
									<div>
										<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.desc") }</label>
										<p class="text-foreground mt-1 whitespace-pre-wrap">{ caseRecord.Description }</p>
									</div>
								</div>
							</div>


							<!-- Timeline -->
							<div class="glass-panel p-6 rounded-xl border border-white/10">
								<h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
									<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
									{ i18n.T(ctx, "case.detail.timeline_title") }
								</h2>
								<div class="space-y-4">
									<div>
										<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.opened") }</label>
										<p class="text-foreground mt-1">{ caseRecord.OpenedAt.Format("January 2, 2006 at 3:04 PM") }</p>
									</div>
									if caseRecord.ClosedAt != nil {
										<div>
											<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.closed") }</label>
											<p class="text-foreground mt-1">{ caseRecord.ClosedAt.Format("January 2, 2006 at 3:04 PM") }</p>
										</div>
									}
								</div>
							</div>
						</div>

		<!-- Right Column -->
		<div class="space-y-6">
			<!-- Assignment -->
			<div class="glass-panel p-6 rounded-xl border border-white/10">
				<h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
					<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
					</svg>
					{ i18n.T(ctx, "case.detail.assignment_title") }
				</h2>
				<div class="space-y-4">
					<div>
						<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.assigned_lawyer") }</label>
						if caseRecord.AssignedTo != nil {
							<p class="text-foreground mt-1">{ caseRecord.AssignedTo.Name }</p>
						} else {
							<p class="text-muted-foreground mt-1 italic">{ i18n.T(ctx, "case.detail.unassigned") }</p>
						}
					</div>
					<!-- Collaborators Section -->
					<div>
						<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.collaborators") }</label>
						if len(caseRecord.Collaborators) > 0 {
							<div class="flex flex-wrap gap-2 mt-2">
								for _, collab := range caseRecord.Collaborators {
									<div class="flex items-center gap-2 px-3 py-1 bg-white/5 border border-white/10 rounded-lg">
										<span class="text-sm text-foreground">{ collab.Name }</span>
										if user.Role == "admin" {
											<button
												type="button"
												{ templ.Attributes{ "onclick": "openConfirmationModal({ title: '" + i18n.T(ctx, "case.detail.remove_collaborator") + "', message: '" + i18n.T(ctx, "case.detail.remove_collaborator_confirm") + "', confirmUrl: '/api/cases/" + caseRecord.ID + "/collaborators/" + collab.ID + "', target: '#collaborator-response', swap: 'innerHTML' }, this)" }... }
												class="text-red-400 hover:text-red-300 transition-colors"
												title={ i18n.T(ctx, "case.detail.remove_collaborator") }
											>
												<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
												</svg>
											</button>
										}
									</div>
								}
							</div>
						} else {
							<p class="text-muted-foreground mt-1 italic">{ i18n.T(ctx, "case.detail.no_collaborators") }</p>
						}
						<!-- Add Collaborator (Admin only) -->
						if user.Role == "admin" {
							<div class="mt-3" x-data={ "{ showAdd: false, availableCollaborators: [], loading: false, caseId: '" + caseRecord.ID + "' }" }>
								<button
									type="button"
									@click="showAdd = !showAdd; if(showAdd && availableCollaborators.length === 0) { loading = true; fetch('/api/cases/' + caseId + '/collaborators/available').then(r => r.json()).then(data => { availableCollaborators = data; loading = false; }); }"
									class="text-sm text-accent hover:text-accent/80 transition-colors flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
									</svg>
									{ i18n.T(ctx, "case.detail.add_collaborator") }
								</button>
								<div x-show="showAdd" x-transition class="mt-2">
									<form
										hx-post={ "/api/cases/" + caseRecord.ID + "/collaborators" }
										hx-target="#collaborator-response"
										hx-swap="innerHTML"
										class="flex flex-col sm:flex-row gap-2"
									>
										<select
											name="user_id"
											required
											x-ref="collaboratorSelect"
											x-effect="if(availableCollaborators.length > 0) { const s = $refs.collaboratorSelect; while(s.options.length > 1) s.remove(1); availableCollaborators.forEach(c => s.add(new Option(c.name + ' (' + c.role + ')', c.id))); }"
											class="flex-1 px-3 py-1.5 bg-white/5 border border-white/10 rounded-lg text-sm text-foreground focus:outline-none focus:ring-2 focus:ring-accent"
										>
											<option value="">{ i18n.T(ctx, "case.detail.select_collaborator") }</option>
										</select>
										<button
											type="submit"
											class="px-3 py-1.5 bg-accent text-accent-foreground rounded-lg text-sm font-semibold hover:bg-accent/90 transition-all duration-200 w-full sm:w-auto"
										>
											{ i18n.T(ctx, "common.add") }
										</button>
									</form>
								</div>
							</div>
						}
						<!-- Collaborator Response -->  
						<div id="collaborator-response"></div>
					</div>
				</div>
			</div>

			<!-- Classification -->
			if caseRecord.Domain != nil || caseRecord.Branch != nil || len(caseRecord.Subtypes) > 0 {
				<div class="glass-panel p-6 rounded-xl border border-white/10">
					<h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
						<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
						</svg>
						{ i18n.T(ctx, "case.detail.classification_title") }
					</h2>
					<div class="space-y-4">
						if caseRecord.Domain != nil {
							<div>
								<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.domain") }</label>
								<p class="text-foreground mt-1">{ caseRecord.Domain.Name }</p>
							</div>
						}
						if caseRecord.Branch != nil {
							<div>
								<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.branch") }</label>
								<p class="text-foreground mt-1">{ caseRecord.Branch.Name }</p>
							</div>
						}
						if len(caseRecord.Subtypes) > 0 {
							<div>
								<label class="text-sm font-medium text-muted-foreground">{ i18n.T(ctx, "case.detail.subtypes") }</label>

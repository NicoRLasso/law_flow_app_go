					<p class="text-muted-foreground mb-4">{ i18n.T(ctx, "case.detail.parties.no_opposing") }</p>
					if currentUser.Role == "admin" {
						<button
							type="button"
							hx-get={ "/api/cases/" + caseRecord.ID + "/party/modal" }
							hx-target="body"
							hx-swap="beforeend"
							class="px-4 py-2 bg-accent hover:bg-accent/80 text-white rounded-lg font-medium transition-all duration-200 inline-flex items-center gap-2"

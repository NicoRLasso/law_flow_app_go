package company

import (
	"context"
	"law_flow_app_go/models"
	"law_flow_app_go/services/i18n"
	"law_flow_app_go/templates/layouts"
)

templ Contact(ctx context.Context, title string, csrfToken string, seo *models.SEO) {
	@layouts.WebsiteLayout(ctx, title, csrfToken, seo) {
		<!-- Hero Section -->
		<section class="section-lg relative overflow-hidden">
			<!-- Animated background elements -->
			<div class="absolute top-20 left-10 w-64 h-64 rounded-full bg-accent/10 blur-3xl animate-float-slow"></div>
			<div class="absolute bottom-20 right-10 w-80 h-80 rounded-full bg-accent/5 blur-3xl animate-float-delayed"></div>
			<div class="container mx-auto px-6 relative z-10">
				<!-- Header -->
				<div class="mx-auto text-center mb-16 reveal">
					<span class="text-label text-accent mb-4 block">{ i18n.T(ctx, "pages.contact.label") }</span>
					<h1 class="text-display text-gradient mb-8">{ i18n.T(ctx, "pages.contact.title") }</h1>
					<p class="text-body-lg text-muted leading-relaxed">
						{ i18n.T(ctx, "pages.contact.desc") }
					</p>
				</div>
				<!-- Two Column Grid -->
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<!-- Left Column - Promotional Content -->
					<div class="reveal flex flex-col items-center md:items-start text-center md:text-left">
						<!-- Logo -->
						<div class="mb-8">
							<img src="/static/images/favicon.png" alt="lexlegalcloud Logo" class="w-32 h-32 md:w-40 md:h-40"/>
						</div>
						<!-- Tagline -->
						<h2 class="text-h2 text-gradient mb-6">{ i18n.T(ctx, "pages.contact.promo.tagline") }</h2>
						<p class="text-body-lg text-muted mb-8 leading-relaxed">
							{ i18n.T(ctx, "pages.contact.promo.desc") }
						</p>
						<!-- Features List -->
						<div class="space-y-4 w-full">
							<div class="flex items-center gap-4">
								<div class="icon-container flex-shrink-0">
									<span class="text-xl">‚ö°</span>
								</div>
								<div>
									<h4 class="text-body font-semibold">{ i18n.T(ctx, "pages.contact.promo.fast_title") }</h4>
									<p class="text-body-sm text-muted">{ i18n.T(ctx, "pages.contact.promo.fast_desc") }</p>
								</div>
							</div>
							<div class="flex items-center gap-4">
								<div class="icon-container flex-shrink-0">
									<span class="text-xl">üõ°Ô∏è</span>
								</div>
								<div>
									<h4 class="text-body font-semibold">{ i18n.T(ctx, "pages.contact.promo.secure_title") }</h4>
									<p class="text-body-sm text-muted">{ i18n.T(ctx, "pages.contact.promo.secure_desc") }</p>
								</div>
							</div>
							<div class="flex items-center gap-4">
								<div class="icon-container flex-shrink-0">
									<span class="text-xl">ü§ù</span>
								</div>
								<div>
									<h4 class="text-body font-semibold">{ i18n.T(ctx, "pages.contact.promo.support_title") }</h4>
									<p class="text-body-sm text-muted">{ i18n.T(ctx, "pages.contact.promo.support_desc") }</p>
								</div>
							</div>
						</div>
					</div>
					<!-- Right Column - Contact Form -->
					<div class="card card-gradient p-8 md:p-12 reveal reveal-stagger-1">
						<h3 class="text-h3 mb-6">{ i18n.T(ctx, "pages.contact.form.title") }</h3>
						<form class="space-y-6">
							<input type="hidden" name="csrf_token" value={ csrfToken }/>
							<div>
								<label class="block text-body-sm font-medium text-muted mb-2">{ i18n.T(ctx, "pages.contact.form.name") }</label>
								<input type="text" class="input w-full" placeholder={ i18n.T(ctx, "pages.contact.form.name") }/>
							</div>
							<div>
								<label class="block text-body-sm font-medium text-muted mb-2">{ i18n.T(ctx, "pages.contact.form.email") }</label>
								<input type="email" class="input w-full" placeholder="you@company.com"/>
							</div>
							<div>
								<label class="block text-body-sm font-medium text-muted mb-2">{ i18n.T(ctx, "pages.contact.form.message") }</label>
								<textarea class="textarea w-full h-32" placeholder={ i18n.T(ctx, "pages.contact.form.message") }></textarea>
							</div>
							<button type="button" class="btn btn-cta w-full justify-center">
								{ i18n.T(ctx, "pages.contact.form.send") }
								<span class="ml-2">‚Üí</span>
							</button>
						</form>
						<div class="mt-8 pt-8 border-t border-white/[0.1] text-center">
							<p class="text-body text-muted mb-2">{ i18n.T(ctx, "pages.contact.form.or_email") }</p>
							<a href="mailto:support@lexlegalcloud.com" class="text-accent hover:text-accent-bright transition-colors">support@lexlegalcloud.com</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	}
}
